{
  "name": "gaming",
  "private": true,
  "packageManager": "bun@1.3.0",
  "workspaces": {
    "catalog": {
      "@orpc/client": "^1.9.0",
      "@orpc/openapi": "^1.9.0",
      "@orpc/server": "^1.9.0",
      "@orpc/zod": "^1.9.0",
      "@types/pg": "^8.11.11",
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "drizzle-orm": "^0.44.2",
      "hono": "^4.8.2",
      "lucide-react": "^0.545.0",
      "pg": "^8.14.1",
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "tsdown": "^0.15.5",
      "typescript": "^5.8.2",
      "zod": "^4.1.11"
    },
    "packages": [
      "apps/web",
      "packages/*"
    ]
  },
  "scripts": {
    "auth:generate": "bunx @better-auth/cli@latest generate --output ./packages/db/src/schema/auth.ts --config ./packages/auth/src/server.ts",
    "build": "bun run web:build",
    "check-types": "turbo check-types",
    "db:down": "turbo -F @gaming/db db:down",
    "db:generate": "turbo -F @gaming/db db:generate",
    "db:migrate": "turbo -F @gaming/db db:migrate",
    "db:push": "bun run -F './packages/db' db:push",
    "db:push:dev": "STAGE=development bun run -F './packages/db' db:push",
    "db:push:prod": "STAGE=production bun run -F './packages/db' db:push",
    "db:push:local": "STAGE=local bun run -F './packages/db' db:push",
    "db:seed": "bun run -F './packages/db' db:seed",
    "db:start": "turbo -F @gaming/db db:start",
    "db:stop": "turbo -F @gaming/db db:stop",
    "db:studio": "turbo -F @gaming/db db:studio",
    "db:studio:local": "bun run --env-file=infra/.env.local db:studio",
    "prettier:check": "prettier '**/*.{js,ts,jsx,tsx,json}' --check",
    "prettier:write": "prettier '**/*.{js,ts,jsx,tsx,json}' --write",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "start": "bun run web:start",
    "web:build": "bun run -F web build",
    "web:start": "bun run -F web start",
    "dev": "turbo dev",
    "dev:local": "bun run --env-file=infra/.env.local dev",
    "dev:development": "bun run --env-file=infra/.env.development dev"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "dotenv": "^17.2.3",
    "sst": "3.17.25",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/aws-lambda": "8.10.159",
    "@types/bun": "^1.3.3",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.0",
    "turbo": "^2.6.3"
  }
}
