{
  "name": "gaming",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "lucide-react": "^0.545.0",
      "hono": "^4.8.2",
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2",
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@orpc/server": "^1.9.0",
      "@orpc/openapi": "^1.9.0",
      "@orpc/zod": "^1.9.0",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@orpc/client": "^1.9.0",
      "drizzle-orm": "^0.44.2",
      "@types/pg": "^8.11.11",
      "pg": "^8.14.1"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @gaming/db db:push",
    "db:studio": "turbo -F @gaming/db db:studio",
    "db:generate": "turbo -F @gaming/db db:generate",
    "db:migrate": "turbo -F @gaming/db db:migrate",
    "db:start": "turbo -F @gaming/db db:start",
    "db:watch": "turbo -F @gaming/db db:watch",
    "db:stop": "turbo -F @gaming/db db:stop",
    "db:down": "turbo -F @gaming/db db:down",
    "auth:generate": "bunx @better-auth/cli@latest generate --output ./packages/db/src/schema/auth.ts --config ./packages/auth/src/main.ts",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "prettier:check": "prettier '**/*.{js,ts,jsx,tsx,json}' --check",
    "prettier:write": "prettier '**/*.{js,ts,jsx,tsx,json}' --write"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "^1.2.6",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.3.0"
}
