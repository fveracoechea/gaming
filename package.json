{
  "name": "gaming",
  "private": true,
  "type": "module",
  "workspaces": {
    "catalog": {
      "@orpc/client": "^1.9.0",
      "@orpc/openapi": "^1.9.0",
      "@orpc/server": "^1.9.0",
      "@orpc/zod": "^1.9.0",
      "@types/pg": "^8.11.11",
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "drizzle-orm": "^0.44.2",
      "hono": "^4.8.2",
      "lucide-react": "^0.545.0",
      "pg": "^8.14.1",
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "tsdown": "^0.15.5",
      "typescript": "^5.8.2",
      "zod": "^4.1.11"
    },
    "packages": [
      "apps/web",
      "packages/*"
    ]
  },
  "scripts": {
    "auth:generate": "bunx @better-auth/cli@latest generate --output ./packages/db/src/schema/auth.ts --config ./packages/auth/src/server.ts",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "db:down": "turbo -F @gaming/db db:down",
    "db:generate": "turbo -F @gaming/db db:generate",
    "db:migrate": "turbo -F @gaming/db db:migrate",
    "db:push": "bun run -F './packages/db' db:push",
    "db:seed": "bun run -F './packages/db' db:seed",
    "db:start": "turbo -F @gaming/db db:start",
    "db:stop": "turbo -F @gaming/db db:stop",
    "db:studio": "turbo -F @gaming/db db:studio",
    "db:watch": "turbo -F @gaming/db db:watch",
    "dev": "sst dev bun run web:dev",
    "web:dev": "bun run -F web dev",
    "web:build": "bun run -F web build",
    "web:start": "bun run -F web start",
    "deploy": "sst deploy --stage production",
    "deploy:staging": "sst deploy --stage staging",
    "prettier:check": "prettier '**/*.{js,ts,jsx,tsx,json}' --check",
    "prettier:write": "prettier '**/*.{js,ts,jsx,tsx,json}' --write",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@faker-js/faker": "^9.2.0",
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/aws-lambda": "8.10.159",
    "@types/bun": "^1.2.6",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.3.0"
}
